    "version": "0.2.0",
    "configurations": [
        {
            "name": "API",
            "type": "python",
            "module": "aiohttp.web",
            "request": "launch",
            "args": [
                "-P",
                "8080",
                "api.core:init_app"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Python: текущий файл",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}